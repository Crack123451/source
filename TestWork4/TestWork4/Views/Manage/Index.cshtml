@model TestWork4.Models.IndexViewModel
@{
    ViewBag.Title = "Управление";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Изменение параметров учетной записи</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Пароль:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Смена пароля", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Создать", "SetPassword")
            }
            ]
        </dd>
        <dt>Данные пользователя:</dt>
        <dd>
            [
            @Html.ActionLink("Изменить", "../Account/Edit")
            ]
        </dd>
        <dt>Номер телефона пользователя:</dt>
        <dd>
            [
            @Html.ActionLink("Добавить", "AddPhoneNumber")
            ]
        </dd>
    </dl>
</div>
